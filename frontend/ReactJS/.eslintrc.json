{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "plugin:prettier/recommended", "prettier/react"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"no-useless-constructor": "warn",
		"prettier/prettier": [
			"error",
			{
				"printWidth": 80,
				"trailingComma": "es5",
				"semi": false,
				"jsxSingleQuote": true,
				"singleQuote": true,
				"useTabs": true
			}
		],
		"import-helpers/order-imports": [
			"warn",
			{
				"alphabetize": {
					"order": "asc",
					"ignoreCase": true
				}
			}
		]
	}
}
